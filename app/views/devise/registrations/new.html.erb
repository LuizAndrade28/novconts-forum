<div class="row justify-content-center my-4">
  <div class="col-lg-6 col-md-8 col-sm-8 bg-white p-5 mt-2 rounded-4 shadow">
    <h3 class="text-center mb-4 userw-title-text">Cadastrar</h3>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>
      <% if f.object.errors[:base].present? %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence %>
      <% end %>

      <div class="form-inputs">
        <%= f.input :first_name,
                    label: "Nome",
                    required: true,
                    autofocus: true %>
        <%= f.input :last_name,
                    label: "Sobrenome",
                    required: true %>
        <%= f.input :email,
                    label: "E-mail",
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    label: "Senha",
                    required: true,
                    hint: ("MÃ­nimo de #{@minimum_password_length} caracteres" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    label: "ConfirmaÃ§Ã£o senha",
                    required: true,
                    input_html: { autocomplete: "new-password" } %>
      </div>

      <div class="form-actions d-flex">
        <%= f.button :submit,
                    "Confirmar cadastro",
                    class: 'rounded-3 shadow-sm flex-grow-1 btn btn-outline-primary my-2 mb-4 me-3 w-100' %>
      </div>
    <% end %>

  </div>
</div>
