<div class="row justify-content-center my-4">
  <div class="col-md-4 bg-white p-5 mt-2 rounded-4 shadow">
    <h2 class="text-center mb-4 userw-title-text">Editar conta</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>
      <% if f.object.errors[:base].present? %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence %>
      <% end %>

      <div class="form-inputs">
        <%= f.input :email, required: true, autofocus: true %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>

        <%= f.input :first_name,
                    label: "Nome" %>
        <%= f.input :last_name,
                    label: "Sobrenome" %>
        <%= f.input :password,
                    label: "Senha",
                    hint: "Deixar em branco caso não deseje mudar",
                    required: false,
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    label: "Confirmação senha",
                    required: false,
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :current_password,
                    label: "Senha atual",
                    required: true,
                    hint: "Necessária para confirmar as alterações na sua conta",
                    input_html: { autocomplete: "current-password" } %>
      </div>

      <div class="form-actions d-flex my-2">
        <%= f.button :submit, "Atualizar dados", class: "flex-grow-1 btn btn-outline-primary my-2 mb-4 me-3 w-100" %>
        <%= link_to "Voltar", request.referer || root_path, class: "flex-grow-1 btn btn-outline-primary my-2 mb-4 w-100" %>
      </div>
    <% end %>

    <section class="border-bottom-purp mb-3"></section>
    <div class="mt-2">
      <h3 class="userw-title-text">Remover conta</h3>
      <p class="userw-title-text-s mb-2">Insatisfeito? Cancele a qualquer momento. </p>
      <%= button_to "Cancelar a minha conta", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "btn btn-primary shadow-sm border-3 rounded-4 mb-3" %>
    </div>
  </div>
</div>
