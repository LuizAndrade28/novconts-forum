<div class="row justify-content-center my-4">
  <div class="col-lg-4 col-md-8 col-sm-8 bg-white p-5 mt-4 rounded-4 shadow">
    <h3 class="text-center mb-4 userw-title-text">Entrar</h3>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.error_notification %>
      <% if f.object.errors[:base].present? %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence %>
      <% end %>

      <div class="form-inputs mt-3 p-text-sizing">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    :label => 'Senha',
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, :label => 'Lembrar', as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions d-flex mt-4">
        <%= f.button :submit,
                     "Entrar",
                     class: 'rounded-3 shadow-sm flex-grow-1 btn btn-outline-primary my-2 mb-4 me-3 w-100 p-text-sizing' %>
        <%= render "devise/shared/links" %>
      </div>
    <% end %>

  </div>
</div>
